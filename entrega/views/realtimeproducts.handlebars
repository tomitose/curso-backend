<div id='products-container'>

  {{#each products}}
    <div class='product-card' id='productID-{{this.id}}'>
      <div class='uk-card uk-card-default'>
        <div class='uk-card-media-top'>
          <img alt='foto producto' />
        </div>
        <div class='uk-card-body'>
          <h3 class='uk-card-title'>{{this.title}}</h3>
          <h5>USD ${{this.price}}</h5>
          <span class='uk-badge'>{{this.category}}</span>
          <p>{{this.description}}</p>
          <button class='uk-button uk-button-secondary uk-button-small'>Agregar
            al carrito</button>
        </div>
      </div>
    </div>
  {{/each}}
</div>
<div id='forms-container'>
  <div id='formAdd-container'>
    <h2>Agregar Producto</h2>
    <form id='formAddProduct'>
      <label for='title'>Título:</label><br />
      <input type='text' id='title' name='title' value='' /><br />

      <label for='description'>Descripción:</label><br />
      <textarea id='description' name='description' rows='2' cols='50'>escriba
        la descripcion.</textarea><br />
      <label for='price'>Precio :</label><br />
      <input type='number' id='price' name='price' value='' /><br />

      <label for='code'>Código:</label><br />
      <input type='text' id='code' name='code' value='' /><br /><br />

      <label for='stock'>Stock:</label><br />
      <input type='number' id='stock' name='stock' value='' /><br /><br />

      <label for='status'>Estado:</label><br />
      <input type='checkbox' id='status' name='status' checked /><br /><br />

      <label for='category'>Categoría:</label><br />
      <input type='text' id='category' name='category' value='Humanos' /><br />

      <label for='thumbnails'>Path de la imagen</label><br />
      <input
        type='text'
        id='thumbnails'
        name='thumbnails1'
        value='/ruta/a/la/img1'
      /><br />
      <input
        type='text'
        id='thumbnails'
        name='thumbnails2'
        value='/ruta/a/la/img2'
      /><br />
      <input
        type='text'
        id='thumbnails'
        name='thumbnails3'
        value='/ruta/a/la/img3'
      /><br />

      <input type='button' id='button-formAdd' value='Enviar' />
    </form>

  </div>
  <div id='formDelete-container'>
    <h2>Eliminar Producto</h2>
    <form id='formDeleteProduct'>
      <label for='title'>ID del producto</label><br />
      <input type='string' id='inputId' name='id' value='' /><br />
      <input type='button' id='button-formDel' value='Enviar' />
    </form>
  </div>

</div>